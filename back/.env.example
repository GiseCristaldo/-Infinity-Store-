# Base de datos
DB_NAME=tu_base_de_datos
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña_segura
DB_HOST=localhost
DB_PORT=3306

# Servidor
PORT=3001
NODE_ENV=development

# JWT Secret - DEBE ser una clave muy segura en producción
JWT_SECRET=tu_clave_jwt_muy_segura_y_larga

# Google OAuth
VITE_GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# Frontend URL
FRONTEND_URL=http://localhost:5173

# SMTP / Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=tu_email_smtp@gmail.com
SMTP_PASS=tu_contraseña_de_aplicacion
FROM_NAME=Infinity Store
FROM_EMAIL=tu_email@dominio.com
ADMIN_EMAIL=admin@dominio.com

# OpenAI (opcional - para funcionalidades de IA)
OPENAI_API_KEY=sk-tu_clave_openai_aqui

# IMPORTANTE: 
# - Nunca subas el archivo .env real al repositorio
# - Usa contraseñas seguras en producción
# - Cambia JWT_SECRET por una clave aleatoria y segura
# - En producción, usa HTTPS y configura NODE_ENV=production
# - Para OpenAI, obtén tu clave en https://platform.openai.com/api-keys